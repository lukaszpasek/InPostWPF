<UserControl x:Class="InPost.View.Paczkomat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InPost.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Text="Paczkomat nr1" Margin="340,137,340,263" TextAlignment="Center"/>
        <Button x:Name="NadajPaczke" Height="40" Width="120"   
            Content="Nadaj paczke" Margin="270,197,400,197" Command="{Binding NadajPaczkeCommand}">
        </Button>
        <Button x:Name="OdbierzPaczke" Height="40" Width="120"   
            Content="Odbierz paczke" Margin="410,197,280,197" Command="{Binding OdbierzPaczkeCommand}"/>
        <TextBlock x:Name="LogPaczkomatu" Text="{Binding Text}" Margin="89,200,740,200" TextAlignment="Center"/>

        <ItemsControl ItemsSource="{Binding PaczkomatMain.History}" Margin="745,229,104,226">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <local:Operacja />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </Grid>
</UserControl>
