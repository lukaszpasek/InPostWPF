<UserControl x:Class="InPost.View.Paczkomat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InPost.View" xmlns:viewmodels="clr-namespace:InPost.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
             xmlns:local1="clr-namespace:ValueConverters"  
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local1:ItemsLimiter x:Key="itemslimiter"></local1:ItemsLimiter>
    </UserControl.Resources>
    <Grid Background="White">
        <TextBlock Text="Paczkomat nr1" Margin="340,137,340,263" TextAlignment="Center"/>
        <Button x:Name="NadajPaczke" Height="40" Width="120"   
            Content="Nadaj paczke" Margin="270,197,400,197" Command="{Binding NadajPaczkeCommand}">
        </Button>
        <Button x:Name="OdbierzPaczke" Height="40" Width="120"   
            Content="Odbierz paczke" Margin="415,205,265,205" Command="{Binding OdbierzPaczkeCommand}"/>

        <ItemsControl ItemsSource="{Binding Paczkomat.History,Converter={StaticResource itemslimiter}}" Margin="275,265,265,10" RenderTransformOrigin="0.5,0.5">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <local:Operacja />
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </Grid>
</UserControl>